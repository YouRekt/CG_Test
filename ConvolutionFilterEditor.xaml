<Window x:Class="CG_Test.ConvolutionFilterEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CG_Test"
        mc:Ignorable="d"
        Title="ConvolutionFilterEditor" Height="600" Width="800">
    <Window.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>
    <StackPanel>
        <Menu Height="Auto">
            <MenuItem x:Name="Reset" Header="Reset" Click="Reset_Click" />
        </Menu>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Kernel Size -->
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <TextBlock Text="Kernel Size:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <ComboBox x:Name="KernelWidthCombo" Width="60" ItemsSource="{Binding KernelSizes}" SelectedItem="{Binding SelectedKernelWidth, Mode=TwoWay}"/>
                <TextBlock Text="x" Margin="5,0,5,0" VerticalAlignment="Center"/>
                <ComboBox x:Name="KernelHeightCombo" Width="60" ItemsSource="{Binding KernelSizes}" SelectedItem="{Binding SelectedKernelHeight, Mode=TwoWay}"/>
            </StackPanel>

            <!-- Kernel Grid -->
            <ItemsControl Grid.Row="1" x:Name="KernelGrid" Margin="0,10,0,0" ItemsSource="{Binding KernelGrid}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="{Binding SelectedKernelWidth}" Rows="{Binding SelectedKernelHeight}" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBox Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Width="80" Margin="2"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Divisor, Offset, Anchor -->
            <StackPanel Grid.Row="2" Margin="0,10,0,0">
                <!-- Divisor Input -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Divisor:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <!-- Bind the TextBox to CustomFilter.Divisor; disable it if auto-calc is on -->
                    <TextBox Text="{Binding CustomFilter.Divisor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="100" Visibility="{Binding IsDivisorEnabled, Converter={StaticResource BoolToVisibilityConverter}}" />
                    <!-- Checkbox to toggle auto calculation -->
                    <CheckBox Content="Auto Calculate" IsChecked="{Binding AutoCalculateDivisor, Mode=TwoWay}" VerticalAlignment="Center" Margin="10,0,0,0" />
                </StackPanel>

                <!-- Offset Input -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Offset:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox Text="{Binding CustomFilter.Offset, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="100"/>
                </StackPanel>

                <!-- Anchor Input: X and Y Coordinates -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Anchor X:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox Text="{Binding CustomFilter.AnchorX, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="100" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Anchor Y:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox Text="{Binding CustomFilter.AnchorY, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="100" />
                </StackPanel>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Cancel" Click="Cancel_Click" Margin="0,0,10,0"/>
                <Button Content="Apply" Click="Apply_Click"/>
            </StackPanel>
        </Grid>
    </StackPanel>
</Window>
