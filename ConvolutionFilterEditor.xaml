<Window x:Class="CG_Test.ConvolutionFilterEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CG_Test"
        mc:Ignorable="d"
        Title="ConvolutionFilterEditor" Height="400" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Kernel Size -->
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBlock Text="Kernel Size:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="KernelWidthCombo" Width="60" SelectedIndex="1" SelectionChanged="KernelWidthCombo_SelectionChanged">
                <ComboBoxItem>1</ComboBoxItem>
                <ComboBoxItem>3</ComboBoxItem>
                <ComboBoxItem>5</ComboBoxItem>
                <ComboBoxItem>7</ComboBoxItem>
                <ComboBoxItem>9</ComboBoxItem>
            </ComboBox>
            <TextBlock Text="x" Margin="5,0,5,0" VerticalAlignment="Center"/>
            <ComboBox x:Name="KernelHeightCombo" Width="60" SelectedIndex="1" SelectionChanged="KernelHeightCombo_SelectionChanged">
                <ComboBoxItem>1</ComboBoxItem>
                <ComboBoxItem>3</ComboBoxItem>
                <ComboBoxItem>5</ComboBoxItem>
                <ComboBoxItem>7</ComboBoxItem>
                <ComboBoxItem>9</ComboBoxItem>
            </ComboBox>
        </StackPanel>

        <!-- Kernel Grid -->
        <ItemsControl Grid.Row="1" x:Name="KernelGrid" Margin="0,10,0,0">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="{Binding ElementName=KernelWidthCombo, Path=SelectedItem.Content}" Rows="{Binding ElementName=KernelHeightCombo, Path=SelectedItem.Content}"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <!-- Add "Path=Value" to the Binding -->
                    <TextBox Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="40" Margin="2"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Divisor, Offset, Anchor -->
        <StackPanel Grid.Row="2" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Divisor:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="DivisorTextBox" Text="1" Width="100"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Offset:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="OffsetTextBox" Text="0" Width="100"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Anchor:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <ComboBox x:Name="AnchorComboBox" SelectedIndex="1" Width="100">
                    <ComboBoxItem Tag="TopLeft">Top-Left</ComboBoxItem>
                    <ComboBoxItem Tag="Center">Center</ComboBoxItem>
                    <ComboBoxItem Tag="BottomRight">Bottom-Right</ComboBoxItem>
                </ComboBox>
            </StackPanel>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Cancel" Click="Cancel_Click" Margin="0,0,10,0"/>
            <Button Content="Apply" Click="Apply_Click"/>
        </StackPanel>
    </Grid>
</Window>
